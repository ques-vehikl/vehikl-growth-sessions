{
    "compilerOptions": {
        "strict": true,
        "module": "ES2020",
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "vite/client",
            "vitest/globals"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "ts-node": {
        "transpileOnly": true,
        "esm": true,
        "compilerOptions": {
            "moduleResolution": "Node16"
        }
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.vue"
    ]
}
